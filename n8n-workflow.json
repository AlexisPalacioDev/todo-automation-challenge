      "id": "if-node",
      "name": "Check for #to-do",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [460, 300]
    },
    {
      "parameters": {
        "jsCode": "// Extract todo text after #to-do\nconst message = $input.first().json.message || '';\nconst userEmail = $input.first().json.user_email || 'default@example.com';\n\n// Remove #to-do and clean up the message\nconst todoText = message.replace('#to-do', '').trim();\n\nif (!todoText) {\n  return [{\n    json: {\n      error: 'No todo text found after #to-do',\n      response: 'Please provide a todo after #to-do. Example: #to-do buy groceries'\n    }\n  }];\n}\n\nreturn [{\n  json: {\n    title: todoText,\n    user_email: userEmail,\n    enhance: true\n  }\n}];"
      },
      "id": "extract-todo",
      "name": "Extract Todo",
      "type": "n8n-nodes-base.code",
      "typeVersion": 1,
      "position": [680, 200]
    },
    {
      "parameters": {
        "url": "http://localhost:3000/api/n8n/add-todo",
        "options": {
          "response": {
            "response": {
              "fullResponse": true
            }
          }
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "title",
              "value": "={{ $json.title }}"
            },
            {
              "name": "user_email", 
              "value": "={{ $json.user_email }}"
            },
            {
              "name": "enhance",
              "value": "={{ $json.enhance }}"
            }
          ]
        }
      },
      "id": "create-todo",
      "name": "Create Todo",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [900, 200]
    },
    {
      "parameters": {
        "jsCode": "// Format success response\nconst response = $input.first().json;\n\nif (response.success) {\n  const todo = response.todo;\n  const enhanced = response.enhancement;\n  \n  let message = `‚úÖ Todo created: \"${todo.title}\"`;\n  \n  if (enhanced) {\n    message += `\\n\\nü§ñ AI Enhancement: ${enhanced.improvements}`;\n    message += `\\nOriginal: \"${enhanced.original_title}\"`;\n    message += `\\nEnhanced: \"${enhanced.enhanced_title}\"`;\n  }\n  \n  return [{\n    json: {\n      response: message,\n      status: 'success'\n    }\n  }];\n} else {\n  return [{\n    json: {\n      response: '‚ùå Failed to create todo. Please try again.',\n      status: 'error'\n    }\n  }];\n}"
      },
      "id": "format-success",
      "name": "Format Success Response",
